{
  "tasks": {
    "dev": "echo 'Run api/src/main.ts (Pending Phase 3)'",
    "test": "deno test -A",
    "build": "deno check api/src/main.ts",
    "db:generate": "deno run -A --node-modules-dir npm:drizzle-kit generate",
    "db:migrate": "deno run -A api/src/db/migrate.ts",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "imports": {
    "std/": "https://deno.land/std@0.224.0/",
    "drizzle-orm": "npm:drizzle-orm@^0.39.1",
    "drizzle-orm/": "npm:/drizzle-orm@0.39.1/",
    "postgres": "npm:postgres@^3.4.5",
    "drizzle-kit": "npm:drizzle-kit@^0.30.4"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "lint": {
    "include": ["api/", "frontend/"],
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "include": ["api/", "frontend/", "conductor/"],
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
